---
import Layout from "@/layouts/Layout.astro";

const cards = [
  {
    title: "前端框架",
    items: [
      {
        title: "nextjs",
        link: "https://nextjs.org/",
      },
      {
        title: "astro",
        link: "https://astro.build/",
      },
    ],
  },
  {
    title: "ui框架",
    items: [
      {
        title: "tailwindcss",
        link: "https://tailwindcss.com/",
      },
      {
        title: "shadcn/ui",
        link: "https://ui.shadcn.com/",
      },
    ],
  },
];
---

<Layout title="专栏-戴富阳的博客">
  <div class="container mx-auto mt-8">
    {
      cards.map((card) => {
        const { items } = card;
        return (
          <div class="mb-6">
            <h2 class="text-2xl font-medium">{card.title}</h2>
            <div class="grid grid-cols-4 gap-4 mt-4">
              {items.map((item) => {
                return (
                  <div class="border rounded-lg">
                    <a
                      target="_blank"
                      class="w-full h-full flex items-center justify-center text-3xl text-center p-4 hover:underline"
                      href={item.link}
                    >
                      {item.title}
                    </a>
                  </div>
                );
              })}
            </div>
          </div>
        );
      })
    }
  </div>
</Layout>
